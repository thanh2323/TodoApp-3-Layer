@model TodoApp.Web.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2><i class="fas fa-chart-pie me-2"></i>Dashboard</h2>
                <p class="text-muted mb-0">Overview of your todo activities</p>
            </div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Add New Todo
            </a>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-grow-1">
                    <div class="h2 mb-0">@Model.Stats.TotalTodos</div>
                    <div>Total Todos</div>
                </div>
                <div class="ms-3">
                    <i class="fas fa-tasks fa-3x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-grow-1">
                    <div class="h2 mb-0">@Model.Stats.CompletedTodos</div>
                    <div>Completed</div>
                </div>
                <div class="ms-3">
                    <i class="fas fa-check-circle fa-3x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card bg-warning text-white h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-grow-1">
                    <div class="h2 mb-0">@Model.Stats.PendingTodos</div>
                    <div>Pending</div>
                </div>
                <div class="ms-3">
                    <i class="fas fa-clock fa-3x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card bg-danger text-white h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-grow-1">
                    <div class="h2 mb-0">@Model.Stats.OverdueTodos</div>
                    <div>Overdue</div>
                </div>
                <div class="ms-3">
                    <i class="fas fa-exclamation-triangle fa-3x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Progress Bar -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-chart-line me-2"></i>Completion Progress
                </h5>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>@Model.Stats.CompletedTodos of @Model.Stats.TotalTodos todos completed</span>
                    <span class="badge bg-primary">@Model.Stats.CompletionRate.ToString("F1")%</span>
                </div>
                <div class="progress" style="height: 10px;">
                    <div class="progress-bar" role="progressbar" style="width: @Model.Stats.CompletionRate%"
                         aria-valuenow="@Model.Stats.CompletionRate" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Todos -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-clock me-2"></i>Recent Todos
                </h5>
                <a asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                @if (Model.RecentTodos.Any())
                {
                    @foreach (var todo in Model.RecentTodos)
                    {
                        <div class="d-flex align-items-start mb-3 pb-3 @(todo != Model.RecentTodos.Last() ? "border-bottom" : "")">
                            <div class="flex-shrink-0 me-3">
                                @if (todo.IsCompleted)
                                {
                                    <i class="fas fa-check-circle text-success"></i>
                                }
                                else if (todo.IsOverdue)
                                {
                                    <i class="fas fa-exclamation-triangle text-danger"></i>
                                }
                                else
                                {
                                    <i class="fas fa-circle-notch text-muted"></i>
                                }
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-bold @(todo.IsCompleted ? "text-decoration-line-through text-muted" : "")">
                                    <a asp-action="Details" asp-route-id="@todo.Id" class="text-decoration-none">
                                        @todo.Title
                                    </a>
                                </div>
                                <div class="d-flex align-items-center mt-1">
                                    <span class="badge @(todo.Priority switch
                                    {
                                        TodoApp.Data.Models.Priority.High => "bg-danger",
                                        TodoApp.Data.Models.Priority.Medium => "bg-warning text-dark",
                                        _ => "bg-success"
                                    }) me-2">
                                        @todo.PriorityText
                                    </span>
                                    <small class="text-muted">
                                        @todo.CreatedAt.ToString("dd/MM/yyyy")
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-inbox fa-3x mb-3"></i>
                        <p>No todos yet. <a asp-action="Create">Create your first todo!</a></p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Overdue & High Priority -->
    <div class="col-md-6 mb-4">
        <div class="row">
            <!-- Overdue Todos -->
            <div class="col-12 mb-3">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0 text-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>Overdue Todos
                        </h6>
                        @if (Model.OverdueTodos.Any())
                        {
                            <a asp-action="Index" asp-route-ShowOverdueOnly="true" class="btn btn-sm btn-outline-danger">
                                View All
                            </a>
                        }
                    </div>
                    <div class="card-body">
                        @if (Model.OverdueTodos.Any())
                        {
                            @foreach (var todo in Model.OverdueTodos.Take(3))
                            {
                                <div class="d-flex align-items-center mb-2">
                                    <div class="flex-grow-1">
                                        <div class="fw-bold">
                                            <a asp-action="Details" asp-route-id="@todo.Id" class="text-decoration-none text-danger">
                                                @todo.Title
                                            </a>
                                        </div>
                                        <small class="text-muted">
                                            Due: @todo.DueDate?.ToString("dd/MM/yyyy")
                                        </small>
                                    </div>
                                    <button class="btn btn-sm btn-outline-success" onclick="toggleStatus(@todo.Id)">
                                        <i class="fas fa-check"></i>
                                    </button>
                                </div>
                            }
                            @if (Model.OverdueTodos.Count() > 3)
                            {
                                <small class="text-muted">
                                    And @(Model.OverdueTodos.Count() - 3) more overdue todos...
                                </small>
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted py-2">
                                <i class="fas fa-check-circle text-success me-1"></i>
                                No overdue todos!
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- High Priority Todos -->
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">
                            <i class="fas fa-flag text-danger me-2"></i>High Priority
                        </h6>
                        @if (Model.HighPriorityTodos.Any())
                        {
                            <a asp-action="Index" asp-route-Priority="3" asp-route-IsCompleted="false" class="btn btn-sm btn-outline-warning">
                                View All
                            </a>
                        }
                    </div>
                    <div class="card-body">
                        @if (Model.HighPriorityTodos.Any())
                        {
                            @foreach (var todo in Model.HighPriorityTodos)
                            {
                                <div class="d-flex align-items-center mb-2">
                                    <div class="flex-grow-1">
                                        <div class="fw-bold">
                                            <a asp-action="Details" asp-route-id="@todo.Id" class="text-decoration-none">
                                                @todo.Title
                                            </a>
                                        </div>
                                        @if (todo.DueDate.HasValue)
                                        {
                                            <small class="text-muted">
                                                Due: @todo.DueDate?.ToString("dd/MM/yyyy")
                                            </small>
                                        }
                                    </div>
                                    <button class="btn btn-sm btn-outline-success" onclick="toggleStatus(@todo.Id)">
                                        <i class="fas fa-check"></i>
                                    </button>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted py-2">
                                <i class="fas fa-smile text-success me-1"></i>
                                No pending high priority todos!
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-bolt me-2"></i>Quick Actions
                </h5>
                <div class="row">
                    <div class="col-md-3 col-sm-6 mb-2">
                        <a asp-action="Create" class="btn btn-outline-primary w-100">
                            <i class="fas fa-plus me-1"></i>Add Todo
                        </a>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-2">
                        <a asp-action="Index" asp-route-IsCompleted="false" class="btn btn-outline-warning w-100">
                            <i class="fas fa-list me-1"></i>View Pending
                        </a>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-2">
                        <a asp-action="Index" asp-route-ShowOverdueOnly="true" class="btn btn-outline-danger w-100">
                            <i class="fas fa-exclamation-triangle me-1"></i>View Overdue
                        </a>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-2">
                        <a asp-action="Index" asp-route-IsCompleted="true" class="btn btn-outline-success w-100">
                            <i class="fas fa-check me-1"></i>View Completed
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleStatus(todoId) {
            showLoading();

            $.ajax({
                url: '@Url.Action("ToggleStatus", "Todo")',
                type: 'POST',
                data: { id: todoId },
                success: function (result) {
                    hideLoading();
                    if (result.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + result.message);
                    }
                },
                error: function () {
                    hideLoading();
                    alert('An error occurred while updating the todo status.');
                }
            });
        }

        // Auto-refresh dashboard every 5 minutes
        setInterval(function() {
            location.reload();
        }, 300000);
    </script>
}